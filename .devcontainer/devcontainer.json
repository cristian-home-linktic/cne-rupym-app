// https://aka.ms/devcontainer.json
{
    "name": "Laravel APP",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "laravel.test",
    "workspaceFolder": "/var/www/html",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "Kasik96.latte",
                "ms-azuretools.vscode-docker",
                "mhutchie.git-graph",
                "Serhioromano.vscode-gitflow",
                "bmewburn.vscode-intelephense-client",
                "onecentlin.laravel-extension-pack",
                "xdebug.php-pack",
                "SanderRonde.phpstan-vscode",
                "onecentlin.phpunit-snippets",
                "recca0120.vscode-phpunit"
            ],
            "settings": {
                "editor.gotoLocation.multipleDefinitions": "goto",
                "intelephense.stubs": [
                    "apache",
                    "bcmath",
                    "bz2",
                    "calendar",
                    "com_dotnet",
                    "Core",
                    "ctype",
                    "curl",
                    "date",
                    "dba",
                    "dom",
                    "enchant",
                    "exif",
                    "FFI",
                    "fileinfo",
                    "filter",
                    "fpm",
                    "ftp",
                    "gd",
                    "gettext",
                    "gmp",
                    "hash",
                    "iconv",
                    "imap",
                    "intl",
                    "json",
                    "ldap",
                    "libxml",
                    "mbstring",
                    "meta",
                    "mysqli",
                    "oci8",
                    "odbc",
                    "openssl",
                    "pcntl",
                    "pcre",
                    "PDO",
                    "pdo_ibm",
                    "pdo_mysql",
                    "pdo_pgsql",
                    "pdo_sqlite",
                    "pgsql",
                    "Phar",
                    "posix",
                    "pspell",
                    "random",
                    "readline",
                    "Reflection",
                    "session",
                    "shmop",
                    "SimpleXML",
                    "snmp",
                    "soap",
                    "sockets",
                    "sodium",
                    "SPL",
                    "sqlite3",
                    "standard",
                    "superglobals",
                    "sysvmsg",
                    "sysvsem",
                    "sysvshm",
                    "tidy",
                    "tokenizer",
                    "xml",
                    "xmlreader",
                    "xmlrpc",
                    "xmlwriter",
                    "xsl",
                    "Zend OPcache",
                    "zip",
                    "zlib",
                    "xdebug"
                ]
            }
        }
    },
    "remoteUser": "sail",
    "postCreateCommand": "chown -R 1000:1000 /var/www/html 2>/dev/null || true"
    // "forwardPorts": [],
    // "runServices": [],
    // "shutdownAction": "none",
}
